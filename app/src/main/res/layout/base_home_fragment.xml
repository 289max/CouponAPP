<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:id="@+id/home_to_search_page"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/home_search"
            android:layout_toRightOf="@+id/home_scan"
            android:background="@drawable/shape_edit_box_bg"
            android:focusable="false"
            android:hint="@string/search_tip"
            android:textColor="@color/white"
            android:textSize="14sp"

            />
        <ImageView
            android:id="@+id/home_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:scrollbarSize="10dp"
            android:src="@mipmap/home_search" />

        <ImageView
            android:id="@+id/home_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/home_scan" />


    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/base_container"/>


</LinearLayout>