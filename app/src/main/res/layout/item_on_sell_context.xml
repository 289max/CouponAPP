<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardElevation="4dp"
    app:contentPadding="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/on_sell_cover"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            />
        <TextView
            android:layout_marginTop="6dp"
            android:id="@+id/on_sell_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="艾叶生姜红花老姜草本泡脚中药包男女足浴粉包祛濕去艾叶生姜红花老姜草本泡脚中药包男女足浴粉包祛濕去濕.."
            android:textSize="14sp"/>
        <LinearLayout
            android:layout_marginTop="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="clip_horizontal">
        <TextView

            android:layout_width="wrap_content"
            android:textColor="@color/colorTmall"
            android:text="58.9"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:id="@+id/on_sell_origin_price_tv"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorTmall"
            android:text="券后价：28.9"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:id="@+id/on_sell_off_price_tv"/>
       </LinearLayout>



    </LinearLayout>



</androidx.cardview.widget.CardView>