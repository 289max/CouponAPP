<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:focusable="true"
        android:focusableInTouchMode="true"

       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/search_or_back_btn"/>
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/search_input_box"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_toLeftOf="@+id/search_or_back_btn"
            android:background="@drawable/shape_edit_box_bg"
            android:hint="@string/search_tip"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/search_clean_btn"
            android:visibility="gone"
            android:src="@mipmap/search_box_delete"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/search_or_back_btn"/>




    </RelativeLayout>

    <FrameLayout
        android:id="@+id/base_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>